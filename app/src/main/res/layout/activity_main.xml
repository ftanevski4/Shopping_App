<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/add_button"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/productName"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="-57dp"
        android:layout_toEndOf="@+id/productQuantity"
        android:text="Add " />

    <EditText
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:hint="Add Product" />

    <EditText
        android:id="@+id/productQuantity"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Add Quantity"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/product_separator"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_above="@+id/ListLayout"
        android:layout_below="@+id/productQuantity"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="-48dp"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal|center_vertical"
        android:text="PRODUCTS"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ListLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/productQuantity"
        android:layout_marginTop="53dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/shopping_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>

